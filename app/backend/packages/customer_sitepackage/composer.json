{
    "name": "starterteam/customer-site-package",
    "type": "typo3-cms-extension",
    "description": "StarterTeam basic sitepackage extension",
    "license": "proprietary",
    "require": {
        "php": "^8.2",
        "typo3/cms-core": "^12.4 || ^13.0",
        "starterteam/starter": "^4.5 || dev-main"
    },
    "suggest": {
        "starterteam/starter-freya": "Frontend theme based on Twig template engine",
        "starterteam/starter-nessa": "Frontend theme based an TYPO3 Fluid",
        "starterteam/starter-twig": "Processing package for Twig template engine",
        "starterteam/starter-twig-news": "Processing package for EXT:news to work with Twig templates"
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin",
        "allow-plugins": {
            "typo3/class-alias-loader": true,
            "typo3/cms-composer-installers": true
        }
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "customer_sitepackage",
            "app-dir": ".Build",
            "web-dir": ".Build/public"
        }
    }
}
