<div id="collapse{{ accordionItem.itemUid }}"
     class="accordion-collapse collapse"
     aria-labelledby="heading{{ accordionItem.itemUid }}"
     data-bs-parent="{{ toggle|default(true) ? '#' ~ uid }}">

    <div class="accordion-body">
        {% include '@component/textmedias/textmedia.twig' with {
            assets: accordionItem.assets,
            bodytext: accordionItem.text,
            grid: accordionItem.grid,
            imageorient: accordionItem.imageorient,
        } only %}
    </div>

</div>
