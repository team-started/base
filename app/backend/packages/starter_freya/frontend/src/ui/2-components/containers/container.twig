{% set containerId = uid ? 'con' ~ uid : identifier %}

{% set containerContent %}
    <div id="{{ containerId }}" class="{{ tx_starter_container|default('container') }} container-{{ CType|default('no-type') }} {{ tx_starter_visibility }} {{ space_before_class }} {{ space_after_class }}">
        {% block moduleContentBlock %}{% endblock %}
    </div>
{% endset %}

{% if tx_starter_background_fluid and tx_starter_background %}
    <div class="{{ tx_starter_background }} {{ tx_starter_visibility }}">
        {{ containerContent }}
    </div>
{% else %}
    {{ containerContent }}
{% endif %}
