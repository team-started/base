{#
identifier: zusammengesetzter String
uid:        Dürfte immer leer sein, außer diese Komponente wird in einem Contentelement verwendet.
breadcrumb: Ist die nötige Klasse für Bootstrap.
#}

{% set identifier = 'bc' ~ uid %}

{% extends '@component/containers/container.twig' %}

{% block moduleContentBlock %}

    <nav>
        <ol id="{{ identifier }}" class="breadcrumb">
            {% for item in items %}
                {% include '@component/breadcrumbs/_breadcrumb-item/breadcrumb-item.twig' with {
                    identifier: identifier,
                    item: item,
                } only %}
            {% endfor %}
        </ol>
    </nav>

{% endblock %}
