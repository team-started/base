<div class="c-siteheader">
    <div class="c-siteheader__contact d-flex justify-content-between align-items-center">
        <div>
            contact
        </div>
        <div>
            <img class="c-siteheader__logo" alt="self-Logo" src="/assets/images/logo.svg">
        </div>
        <div class="d-flex">
            {% for item in sm %}
                {% set link = 
                    {
                        'config':
                            {
                                'uri': item.link.config.uri,
                                'target': item.link.config.target,
                                'title': item.link.config.title,
                                'class': item.link.config.class
                            }
                    }
                %}
                {% embed '@object/links/link.twig' with link %}
                    {% block link %}
                        {% include '@object/images/image.twig' with item.image only %}
                    {% endblock %}
                {% endembed %}
            {% endfor %}
        </div>
    </div>
    <hr>
    <div class="c-siteheader__nav">
        <div>
            navi
        </div>
    </div>
</div>
