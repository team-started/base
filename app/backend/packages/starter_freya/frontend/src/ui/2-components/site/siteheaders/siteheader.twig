{#
CType:  meint in diesem Fall 'ComponentType'
#}

{% set CType = 'siteheader' %}

<div class="c-{{ CType }}">
    <div class="c-{{ CType }}__top d-flex justify-content-between align-items-center">
        <div class="d-flex flex-column align-items-start w-33">
            {% for item in contact %}
                {% set item = item|merge({ 'additionalClass': 'c-' ~ CType ~'__contact' }) %}
                {% include '@component/icons/icon.twig' with item only %}
            {% endfor %}
        </div>
        <div class="w-33">
            {% include '@object/images/image.twig' with {
                'src': '/assets/images/logo.svg',
                'alt': '',
                'title': '',
                'additionalClass': 'c-' ~ CType ~'__logo'
            } only %}
        </div>
        <div class="d-flex justify-content-end w-33">
            {% for item in sm %}
                {% set item = item|merge({ 'additionalClass': 'c-' ~ CType ~'__sm' }) %}
                {% include '@component/icons/icon.twig' with item only %}
            {% endfor %}
        </div>
    </div>
    <hr>
    <div class="c-{{ CType }}__nav">
        <div>
            navi
        </div>
    </div>
</div>
