{#
CType:  meint in diesem Fall 'ComponentType'
#}

{% set CType = 'siteheader' %}

<div class="c-{{ CType }}">
    <div class="c-{{ CType }}__contact d-flex justify-content-between align-items-center">
        <div class="w-33">
            contact
        </div>
        <div class="w-33">
            {% include '@object/images/image.twig' with {
                'src': '/assets/images/logo.svg',
                'alt': '',
                'title': '',
                'additionalClass': 'c-' ~ CType ~'__logo'
            } only %}
        </div>
        <div class="d-flex justify-content-end w-33">
            {% for item in sm %}
                {% set image = item.image|merge({'additionalClass': 'c-' ~ CType ~'__sm'}) %}
                {% embed '@object/links/link.twig' with item.link %}
                    {% block linkContent %}
                        {% include '@object/images/image.twig' with image only %}
                    {% endblock %}
                {% endembed %}
            {% endfor %}
        </div>
    </div>
    <hr>
    <div class="c-{{ CType }}__nav">
        <div>
            navi
        </div>
    </div>
</div>
