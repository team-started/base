{% set componentType = 'text' %}
{% set container = tx_starter_container ? tx_starter_container : 'container' %}
{% set componentClass = 'c-' ~ componentType %}
{% set componentBackgound = tx_starter_background_fluid == '' ? tx_starter_background %}



{% extends '@container' %}

{% block component %}
  <div class="row">
    <div class="col">
      <div id="c{{ uid }}" class="{{ componentClass }} {{ componentBackgound }}">
        {{ bodytext }}
      </div>  
    </div>
  </div>
{% endblock %}
