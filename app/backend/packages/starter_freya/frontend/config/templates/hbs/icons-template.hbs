/**
* automaticlly created iconfont scss
* do not modify this section
*/

@include font-face('{{ name }}', '{{ name }}');

$icons-font: "{{ name }}";

%icon {
  font-family: {{ name }}, sans-serif !important;
  font-style: normal !important;
  font-weight: normal !important;
  font-variant: normal !important;
  text-transform: none !important;
  speak: none;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

[data-icon]::before {
  @extend %icon;

  content: attr(data-icon);
}

[class^="icon-"]::before,
[class*=" icon-"]::before {
  @extend %icon;
}

$icons-map: (
{{# each codepoints }}
  "{{ @key }}": "\\{{ codepoint this }}",
{{/ each }}
);

{{# each codepoints }}
{{# if ../selector }}
{{ ../selector }}.{{ ../prefix }}-{{ @key }}::before {
{{ else }}
{{ tag }}.{{ ../prefix }}-{{ @key }}::before {
{{/ if }}
  content: map-get($icons-map, "{{ @key }}");
}

{{/ each }}