{
    "name": "starterteam/base",
    "description": "TYPO3 CMS Distribution with TYPO3-Console and Surf support",
    "authors": [
        {
            "name": "Christian Wolfram",
            "email": "c.wolfram@chriwo.de"
        },
        {
            "name": "Marc Fell",
            "email": "marc@fell.hamburg"
        },
        {
            "name": "Marcel Schmid",
            "email": "m.schmid@visual-fx.ch"
        },
        {
            "name": "Jens Seiller",
            "email": "buero@jdd-webdesign.de"
        }
    ],
    "require": {
        "php": "^7.4",
        "cweagans/composer-patches": "^1.7",
        "helhum/dotenv-connector": "^3.0",
        "helhum/typo3-console": "^7.0",
        "ichhabrecht/content-defender": "^3.2",
        "starterteam/site-package-freya": "dev-main",
        "starterteam/site-package-nessa": "dev-main",
        "starterteam/starter-migration": "dev-main",
        "symfony/dotenv": "^5.2",
        "twig/twig": "^3",
        "typo3/cms-backend": "^11.5",
        "typo3/cms-belog": "^11.5",
        "typo3/cms-beuser": "^11.5",
        "typo3/cms-core": "^11.5",
        "typo3/cms-extbase": "^11.5",
        "typo3/cms-extensionmanager": "^11.5",
        "typo3/cms-filelist": "^11.5",
        "typo3/cms-fluid": "^11.5",
        "typo3/cms-fluid-styled-content": "^11.5",
        "typo3/cms-form": "^11.5",
        "typo3/cms-frontend": "^11.5",
        "typo3/cms-impexp": "^11.5",
        "typo3/cms-info": "^11.5",
        "typo3/cms-install": "^11.5",
        "typo3/cms-lowlevel": "^11.5",
        "typo3/cms-recordlist": "^11.5",
        "typo3/cms-redirects": "^11.5",
        "typo3/cms-reports": "^11.5",
        "typo3/cms-rte-ckeditor": "^11.5",
        "typo3/cms-scheduler": "^11.5",
        "typo3/cms-seo": "^11.5",
        "typo3/cms-setup": "^11.5",
        "typo3/cms-sys-note": "^11.5",
        "typo3/cms-t3editor": "^11.5",
        "typo3/cms-tstemplate": "^11.5",
        "typo3/cms-viewpage": "^11.5"
    },
    "require-dev": {
        "michielroos/typo3scan": "^1.7",
        "rector/rector": "0.13.4",
        "symplify/monorepo-builder": "^10.0",
        "typo3/coding-standards": "^0.5.0"
    },
    "autoload": {
        "psr-4": {
            "StarterTeam\\StarterFreya\\": "packages/starter_freya/Classes",
			"StarterTeam\\StarterMigration\\": "packages/starter_migration/Classes",
			"StarterTeam\\StarterNessa\\": "packages/starter_nessa/Classes",
            "StarterTeam\\StarterTwig\\": "packages/starter_twig/Classes",
            "StarterTeam\\Starter\\": "packages/starter/Classes"
        }
    },
	"autoload-dev": {
		"psr-4": {
			"StarterTeam\\StarterMigration\\Tests\\": "packages/starter_migration/Tests"
		}
	},
    "repositories": [
        {
            "type": "path",
            "url": "./packages/*"
        },
        {
            "type": "composer",
            "url": "https://packagist.starter.team"
        },
        {
            "type": "vcs",
            "url": "https://github.com/chriwo/typo3-pti.git"
        }
    ],
    "extra": {
        "typo3/cms": {
			"cms-package-dir": "{$vendor-dir}/typo3/cms"
        },
		"enable-patching": true,
		"composer-exit-on-patch-failure": true,
		"patches": {
			"pti/pti": {
				"Prepend site base uri to assets": "patches/pti_prepend_site_uri_assets.patch"
			}
		}
    },
    "config": {
        "secure-http": true,
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "ext-dom": "1",
            "ext-intl": "1",
            "ext-simplexml": "1",
            "ext-xml": "1",
            "ext-xmlwriter": "1",
            "ext-json": "1",
            "ext-gd": "1"
        },
        "allow-plugins": {
            "typo3/class-alias-loader": true,
            "typo3/cms-composer-installers": true,
            "helhum/dotenv-connector": true,
            "cweagans/composer-patches": true
        }
    },
    "scripts": {
        "create-symlinks": [
            "ln -sf vendor/helhum/typo3-console/typo3cms typo3cms"
        ],
        "post-install-cmd": [
            "@create-symlinks"
        ],
        "post-update-cmd": [
            "@create-symlinks"
        ]
    },
	"minimum-stability": "dev",
	"prefer-stable": true
}
